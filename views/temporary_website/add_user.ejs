<!DOCTYPE html>
<html>
<head>
    <% include partials/head.ejs %>
</head>
<body>
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <% include partials/header.ejs %>
        </div>
        <div class="panel-body">
            <form class="form-horizontal" method="post">
                <div class="form-group">
                    <label class="control-label col-md-4">employee_number</label>
                    <div class="col-md-4">
                        <input name="employee_number" type="text" class="form-control" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">name</label>
                    <div class="col-md-4">
                        <input name="name" type="text" class="form-control" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">password</label>
                    <div class="col-md-4">
                        <input name="password" type="password" class="form-control" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">retype_password</label>
                    <div class="col-md-4">
                        <input name="retype_password" type="password" class="form-control" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">department</label>
                    <div class="col-md-4">
                        <input name="department" type="text" class="form-control" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">position</label>
                    <div class="col-md-4">
                        <input name="position" type="text" class="form-control" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">permission</label>
                    <div class="col-md-4 checkbox">
                        <label><input name="permission" type="checkbox" value="">admin</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">smartphone_address</label>
                    <div class="col-md-4">
                        <input name="smartphone_address" type="text" class="form-control" required/>
                    </div>
                </div>
                <div class="col-md-8 text-right">
                    <input class="btn btn-primary" type="submit" value="Register"/>
                </div>
            </form>
        </div>
        <div class="panel-footer">
            <% include partials/footer.ejs %>
        </div>
    </div>
</div>
</body>
</html>
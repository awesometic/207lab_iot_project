<form name="login" class="form-inline" role="form" method="post">
    <div class="form-group">
        <label for="user_id">ID</label>
        <input name="user_id" type="id" class="form-control" id="user_id">
        <label for="pwd">Password</label>
        <input name="pass" type="password" class="form-control" id="pwd"><br>
    </div><br>
    <div class="checkbox">
        <label><input name="Remember" type="checkbox"> Remember me </label>
    </div>
    <button type="submit" class="btn btn-group-lg">Login</button><br>
    <a style="color: #c12e2a" id="login-open-modal"><span class="glyphicon glyphicon-user"></span>Sign Up</a>
</form>
<!-- Modal -->
<div class="modal fade" id="login-join-modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">회원 가입 신청</h4>
            </div>
            <form class="form-horizontal" role="form" method="post">
                <div class="modal-body">
                    <% include join.ejs %>
                </div>
                <div class="modal-footer">
                    <input type="reset" size="20" class="btn btn-default" name="reset" value="Clear">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </form>
        </div>

    </div>
</div>

<form name="login" class="form-inline" role="form" method="post">
    <div class="form-group">
        <label for="user_id">ID</label>
        <input name="user_id" type="id" class="form-control" id="user_id">
        <label for="pwd">Password</label>
        <input name="pass" type="password" class="form-control" id="pwd"><br>
    </div><br>
    <div class="checkbox">
        <label><input name="Remember" type="checkbox"> Remember me </label>
    </div>
    <button type="submit" class="btn btn-group-lg">Login</button><br>
    <a style="color: #c12e2a" id="open-modal"><span class="glyphicon glyphicon-user"></span>Sign Up</a>
</form>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Join</h4>
            </div>
            <form class="form-horizontal" role="form" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">smart_add</label>
                        <div class="col-sm-10">
                            <input class="form-control" name="smartphone_address" id="smartphone_address" type="id" >
                        </div>
                        <label class="col-sm-2 control-label">emp_num</label>
                        <div class="col-sm-10">
                            <input class="form-control" name="employee_number" id="employee_number" type="id" >
                        </div>
                        <label class="col-sm-2 control-label">name</label>
                        <div class="col-sm-10">
                            <input class="form-control" name="name" id="name" type="id" >
                        </div>
                        <label class="col-sm-2 control-label">pw</label>
                        <div class="col-sm-10">
                            <input class="form-control" name="join_pwd" id="user_pwd" type="password" >
                        </div>
                        <label class="col-sm-2 control-label">pw_ch</label>
                        <div class="col-sm-10">
                            <input class="form-control" name="join_pwd2" id="user_pwd2" type="password" >
                        </div>
                        <label class="col-sm-2 control-label">pos</label>
                        <div class="col-sm-10">
                            <input class="form-control" name="position" id="position" type="id" >
                        </div>
                        <div class="col-sm-10">
                            <input class="form-control" name="permission" id="permission" type="hidden" value="0">
                            <input class="form-control" name="admin" id="admin" type="hidden" value="0" >
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="reset" size="20" class="btn btn-default" name="reset" value="Clear">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </form>
        </div>

    </div>
</div>

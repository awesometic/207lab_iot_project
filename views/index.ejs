<!DOCTYPE html>
<html>
<head>
    <% include partials/head.ejs %>
    <% if (!smartphone_address && !employee_number) { %>
    <style>
        /* http://webdir.tistory.com/31 */
        #logo {
            width: 650px;
            height: 300px;
        }
        #main {
            height: 100%;
            text-align: center;
        }
        #main:before {
            content: "";
            display: inline-block;
            width: 1px;
            height: 100%;
            margin-right: 0;
            vertical-align: middle;
        }
        #content {
            display: inline-block;
        }
    </style>
    <% } %>
</head>
<body>
<div id="body">

    <% if (smartphone_address && employee_number) { %>
    <div id="nav">
        <nav class="navbar navbar-inverse" data-spy="affix" data-offset-top="197">
            <% include partials/nav.ejs %>
        </nav>
    </div>
    <div id="main" class="container-fluid">
        <div id="wrapper-row" class="row">
            <div id="sidenav" class="col-sm-2 sidenav">
                <% include partials/sidenav.ejs %>
            </div>
            <div id="content">
                <div id="container" class="col-sm-10 col-md-offset-2 content">
                    <div id="home" class="tab-pane fade in active" align="center">
                        <% if (page == "index") { %>
                        <img src="207lab.jpg" style="width:650px;height:300px;">
                        <% } else { %>
                        <% include partials/main.ejs %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% } else { %>
    <div id="main" class="container-fluid">
        <div id="header">

        </div>
        <div id="content">
            <img id="logo" src="207lab.jpg">
            <form name="login" class="form-inline" role="form" method="post">
                <div class="form-group">
                    <label for="employee_number">ID</label>
                    <input name="employee_number" type="id" class="form-control" id="employee_number">
                    <label for="pwd">Password</label>
                    <input name="pass" type="password" class="form-control" id="pwd"><br>
                </div><br>
                <div class="checkbox">
                    <label><input name="Remember" type="checkbox"> Remember me </label>
                </div>
                <button type="submit" class="btn btn-group-lg">Login</button><br>
                <a style="color: #c12e2a" id="login-open-modal"><span class="glyphicon glyphicon-user"></span>Sign Up</a>
            </form>
            <!-- Modal -->
            <div class="modal fade" id="login-join-modal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">회원 가입 신청</h4>
                        </div>
                        <form class="form-horizontal" role="form" method="post">
                            <div class="modal-body">
                                <% include partials/join.ejs %>
                            </div>
                            <div class="modal-footer">
                                <input type="reset" size="20" class="btn btn-default" name="reset" value="Clear">
                                <button type="submit" class="btn btn-default">Submit</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>
    <% } %>

</div>
</body>
</html>
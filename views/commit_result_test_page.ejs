<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

    <% include nav.ejs %>

    <% include sidenav.ejs %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                출퇴근 현황 테스트
                <small>출퇴근 현황 테스트 페이지</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#"> 근무 기록 조회</a></li>
                <li class="active"> 출퇴근 현황 테스트</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">요약 정보</h3>
                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="alert alert-warning alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4><i class="icon fa fa-warning"></i> 읽어보세요!</h4>
                                출퇴근 현황을 임시로 보여주기 위한 테스트 페이지입니다.<br>
                                이 정보들이 차트 형식으로 시각화되어 표시될 것입니다.
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">출퇴근 현황</h3>
                            <small> - 평균 값은 지난 한 달 근태 현황에 대한 평균입니다.</small>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="commit_table" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>이름</th>
                                    <th>스마트폰 주소</th>
                                    <th>오늘 출근 시간</th>
                                    <th>오늘 퇴근 시간</th>
                                    <th>오늘 일 한 시간</th>
                                    <th>평균 출근 시간</th>
                                    <th>평균 퇴근 시간</th>
                                    <th>평균 일 한 시간</th>
                                </tr>
                                </thead>
                                <tbody>
                                <%
                                if (typeof allTodayComeInTime !== 'undefined' && typeof allTodayComeOutTime !== 'undefined'
                                        && typeof allTodayWorkingTime !== 'undefined' && typeof allAvgComeInTime !== 'undefined'
                                        && typeof allAvgComeOutTime !== 'undefined' && typeof allAvgWorkingTime !== 'undefined') {
                                for (var i = 0; i < allTodayComeInTime.userList.length; i++) {
                                %>
                                <tr>
                                    <td><%= allTodayComeInTime.userList[i].name_user %></td>
                                    <td><%= allTodayComeInTime.userList[i].smartphone_address %></td>

                                    <!-- 오늘 출근 시간 -->
                                    <% if (allTodayComeInTime.userList[i].todayComeInTime == 'NO DATA') { %>
                                    <td><%= allTodayComeInTime.userList[i].todayComeInTime; %></td>
                                    <% } else { %>
                                    <td><%= allTodayComeInTime.userList[i].todayComeInTime.split(' ')[1] %></td>
                                    <% } %>

                                    <!-- 오늘 퇴근 시간 -->
                                    <% if (allTodayComeOutTime.userList[i].todayComeOutTime == 'NO DATA') { %>
                                    <td><%= allTodayComeOutTime.userList[i].todayComeOutTime; %></td>
                                    <% } else { %>
                                    <td><%= allTodayComeOutTime.userList[i].todayComeOutTime.split(' ')[1] %></td>
                                    <% } %>

                                    <!-- 오늘 일 한 시간 -->
                                    <%
                                    if (allTodayWorkingTime.userList[i].todayWorkingTime != 'UNAVAILABLE') {
                                        var totalWorkingTimeSec = allTodayWorkingTime.userList[i].todayWorkingTime;
                                        var workingTimeSec = Math.floor(totalWorkingTimeSec % 60);
                                        var workingTimeMin = Math.floor(totalWorkingTimeSec / 60) % 60;
                                        var workingTimeHour = Math.floor(totalWorkingTimeSec / 3600);
                                    %>
                                    <td><%= workingTimeHour %> 시간 <%= workingTimeMin %> 분 <%= workingTimeSec %> 초</td>
                                    <% } else { %>
                                    <td><%= allTodayWorkingTime.userList[i].todayWorkingTime %></td>
                                    <% } %>

                                    <!-- 평균 출근 시간 -->
                                    <td><%= allAvgComeInTime.userList[i].avgComeInTime %></td>

                                    <!-- 평균 퇴근 시간 -->
                                    <td><%= allAvgComeOutTime.userList[i].avgComeOutTime %></td>

                                    <!-- 평균 일 한 시간 -->
                                    <%
                                    if (allAvgWorkingTime.userList[i].avgWorkingTime != 'UNAVAILABLE') {
                                        var totalWorkingTimeSec = allAvgWorkingTime.userList[i].avgWorkingTime;
                                        var workingTimeSec = Math.floor(totalWorkingTimeSec % 60);
                                        var workingTimeMin = Math.floor(totalWorkingTimeSec / 60) % 60;
                                        var workingTimeHour = Math.floor(totalWorkingTimeSec / 3600);
                                    %>
                                    <td><%= workingTimeHour %> 시간 <%= workingTimeMin %> 분 <%= workingTimeSec %> 초</td>
                                    <% } else { %>
                                    <td><%= allAvgWorkingTime.userList[i].avgWorkingTime %></td>
                                    <% } %>
                                </tr>
                                <% } } %>
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>이름</th>
                                    <th>스마트폰 주소</th>
                                    <th>오늘 출근 시간</th>
                                    <th>오늘 퇴근 시간</th>
                                    <th>오늘 일 한 시간</th>
                                    <th>평균 출근 시간</th>
                                    <th>평균 퇴근 시간</th>
                                    <th>평균 일 한 시간</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.box-body -->
                        <div class="overlay pageload_effect">
                            <i class="fa fa-refresh fa-spin"></i>
                        </div>
                        <!-- /.pageload_effect -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-sm-6">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">reserved</h3>
                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">reserved</h3>
                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
